
{
  "includeForks": true,
  "automerge": false,
  "branchConcurrentLimit": 2,
  "branchPrefix": "renovate-",
  "bumpVersion": "patch",
  "dependencyDashboard": true,
  "extends": ["config:base"],
  "rangeStrategy": "pin",
  "regexManagers": [
    {
      "fileMatch": ["^*.gemspec"],
      "matchStrings": [
        "\\s*add_(:?(?<depType>.*?)_)?dependency\\s*(['\"])(?<depName>[^'\"]+)(['\"])(\\s*,\\s*(?<currentValue>(['\"])[^'\"]+['\"](\\s*,\\s*['\"][^'\"]+['\"])?))?"
      ],
      "depNameTemplate": "gemspec",
      "datasourceTemplate": "rubygems",
      "versioningTemplate": "ruby"
    }
  ]
}
